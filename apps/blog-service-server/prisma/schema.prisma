datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  author    Author?   @relation(fields: [authorId], references: [id])
  authorId  String?
  comments  Comment[]
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  title     String?
  updatedAt DateTime  @updatedAt
}

model Comment {
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
  updatedAt DateTime @updatedAt
}

model Author {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  name      String?
  posts     Post[]
  updatedAt DateTime @updatedAt
}

model Test {
  createdAt   DateTime        @default(now())
  description String?
  id          String          @id @default(cuid())
  name        String?
  relatedPost String?
  status      EnumTestStatus?
  test        Json
  updatedAt   DateTime        @updatedAt
}

enum EnumTestStatus {
  Option1
}
